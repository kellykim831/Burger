<div class="card text-center">
  <div class="card-header" style="background-color: rgb(233, 153, 61);">
    <h1><i style="color: brown;" class="fas fa-cheeseburger">Eat Da Burger!</i><i style="color: brown;" class="fas fa-cheeseburger"></i></h1>
  </div>
  <div class="card-body">

    <h2 class="card-title">Which Burger Are You Craving Today?</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>

    <h2>Burgers you've devoured</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="burger_name">
      </div>

      <div class="form-group">
        <label for="eat">Would you like to devour this burger?</label><br>
        <input type="radio" name="devour" value="1" checked> Devour it Now!<br>
        <input type="radio" name="devour" value="0"> Eat it later .
      </div>

      <button type="submit">Add Burger</button>
    </form>

