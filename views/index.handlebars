<div class="border border-danger card text-center" style="background-color: rgba(245, 245, 245, 0.5);">
  <div class="card-header">
    <h1><i style="color: black">Eat Da Burger!</i></h1>
    <img src="/assets/cuteburger.png" alt="Cartoon Burger" width="100" height="100" style="vertical-align:middle">
  </div>
</div>

<br>
<div class="row">
  <div class="col">
    <div class="mb-6 border border-danger" style="background-color: rgba(245, 245, 245, 0.5);">
      <h2 class="card text-center" style="background-color:yellow;" >Pick A Burger!</h2>
      <div class="card-body" style="text-align: right;">
        <p class="card text">
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
          {{/unless}}
          {{/each}}
        </ul>
        </p>
      </div>
    </div>
  </div>

  <br>
  <div class="col">
    <div class="mb-6 border border-danger" style="background-color: rgba(245, 245, 245, 0.5);">
      <h2 class="card text-center" style="background-color:yellow;">Burgers in Yo Belly!</h2>
      <div class="card-body" style="text-align: right;">
        <p class="card text">
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devour=false}}
          {{/if}}
          {{/each}}
        </ul>
        </p>
      </div>
    </div>
  </div>
</div>
<br>
<div class="card text-center border border-danger" style="background-color: rgba(245, 245, 245, 0.5);">
  <h2 style="background-color: yellow;">
    Add a Burger
  </h2>
  <form class="create-form">
    <div class="form-group">
      <label for="bg"><strong><h4>Burger Name:</h4></strong></label>
      <input type="text" id="bg" name="burger_name">
    </div>
    <div class="form-group">
      <label for="eat"><strong><h4>Who's Hungry?</h4></strong></label><br>
      <input type="radio" name="devour" value="1" checked><strong><h4>Eat it Now!</h4></strong><br>
      <input type="radio" name="devour" value="0"><strong><h4>Eat it Later</h4></strong>
    </div>
    <button type="submit">Add Burger</button>
  </form>
  </p>
</div>
</div>
